<div class="clear"></div>
<div id="result_content">
<%= content_for :js do %>
  var isbn = "<%= @isbn %>";
  var max_weight = "<%=@max_weight%>";
  var need_refresh = <%=@stores.nil? %>;
<% end %>

         <% unless @stores.nil? %>
            <div class="stores">
            <p class="desch3">Lowest Prices for <i><%= @type %></i> matching <i><%= @search_string %></i>
            <%= tweet_button(:text => "Awesome deals at #cheapr.me -", :count => "none", :via=>'Cheapr.me') %>
            </p>
            <table class="price_list">

             <% @stores.each_with_index do |data,x|  %>

                  <% unless data[:price] == @not_available %>

                                      <% if x == 0 then
                                          maxw = data[:weight]
                                         end
                                      %>
                                  <tr>
                                         <td>
                                            <a rel="nofollow" target="_blank" href="<%= data[:url] %>"><%= data[:source] %></a>
                                          </td>  
                                          <td class="purchase">
                                            <a rel="nofollow" target="_blank" href="<%= data[:url] %>"><img src='/images/cart.png'></a>
                                          </td>  
                                          
                                           <td class="td_price">
                                                <span style="font-family:rupee">R</span> <%= data[:price] %></span>
                                           </td>     
                                            <td  class="td_name">
                                            <b><%= data[:name] %></b></br>
                                            <span class="discount"><%= data[:discount] %></span></br>
                                            <span class="shipping"><%= data[:shipping] %></span></br>
                                            
                                            </td>
                                            <td  class="td_author">
                                                <%= data[:author] %>
                                            </td>
                                         <td>
                                                <img src='<%= data[:img] %>' width="64" height="100" class='prod_img'>
                                          </td>
                                          <td>
                                            <ul class="tag_dummy">
                                             <!-- <li><a href="#">LOWEST</a></li>-->

                                            </ul>
                                          </td>
                                        </tr>
                  <% end %>
                <% end %>  
                            </table>
            
                <br />
              </div>
          <% else %>

                <div id="loader">
                <div id="wait-text">
                <img src='images/9.gif' />
                    We are fetching prices from <%= @prices.number_of_stores %> online stores...<strong>please be patient!</strong></div>
                </div>
                </div>

		<script> 
		var auto_refresh = setInterval(
		function()
		{
       		$("#result_content").load(location.href+" #result_content>*","");
		}, 2000);
        //Clear interval after 10 seconds
        setTimeout (function() { clearInterval(auto_refresh); }, 10000 );
		</script>
     <% end %>
